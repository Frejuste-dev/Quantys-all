# Configuration de base
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed
FINAL_FOLDER=final
ARCHIVE_FOLDER=archive
LOG_FOLDER=logs
MAX_FILE_SIZE=16777216  # 16MB
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# Configuration MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=sage_x3_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=sage_x3_db

# URL de connexion MySQL (sera construite automatiquement)
# Format: mysql+pymysql://user:password@host:port/database
DATABASE_URL=mysql+pymysql://sage_x3_user:your_mysql_password@localhost:3306/sage_x3_db

# Configuration Celery (optionnel)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Configuration de session
SESSION_EXPIRY_HOURS=24
CLEANUP_INTERVAL_MINUTES=60